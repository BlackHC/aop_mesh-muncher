terrain:
	surfaceShader
	inputs:
		worldPosition vec3

	uniforms:
		terrainTexture 'layout( binding = 0 ) sampler2D'

	code::
		vec4 surfaceShader() {
			return texture( terrainTexture, gl_TexCoord[0].st );
		}
sgsMesh:
